    <!-- Filtro por Fecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filtrar_por_fecha"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_marginBottom="8dp"/>

        <!-- Espaciador flexible -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Switch
            android:id="@+id/switchFecha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:paddingRight="10dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/layoutFechas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/tgFiltrarFechas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingVertical="10dp"
            android:orientation="horizontal"
            app:singleSelection="true"
            app:selectionRequired="false">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/tgSemanaActual"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:layout_weight="1"
                android:text="@string/mostrar_semana"
                android:checked="false"
                android:enabled="false"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/tgRangoFechas"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:layout_weight="1"
                android:text="@string/por_rango"
                android:checked="false"
                android:enabled="false"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btnSeleccionarFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/seleccionar_rango_fechas"
        android:enabled="false"
        style="?attr/materialButtonOutlinedStyle"/>




    <!-- Botones de acciÃ³n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnAplicarFiltros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/aplicar"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnLimpiarFiltros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/limpiar"/>
    </LinearLayout>
</LinearLayout>